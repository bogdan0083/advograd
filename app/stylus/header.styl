.header
	min-height 740px
	position relative
	background url('../images/header-bg.jpg') bottom / 1200px
	//background-attachment fixed
	box-shadow 0 4px 4px -2px rgba(4, 8, 12, 0.83)
	&__in
		margin 0 auto
	&__slider-wrap
		min-height 707px
	
.mega-slider
	&__control-left,
	&__control-right
		position absolute
		z-index 1000
	&__control-left
		triangle(44px, 82px, 'left', white)
		top 50%
		left 14%
		margin-top -41px
	&__control-right
		triangle(44px, 82px, 'right', white)
		top 50%
		right 17%
		margin-top -41px
			
.mega-slide
	height 707px
	position relative
	clearfix() 
	
	&_law
		background url('../images/slide-bg1.jpg') center / cover
		.mega-slide__desc
			margin-bottom 10px
			&:last-of-type
				margin-bottom 10px		
	&_answer
		background url('../images/slide-bg2.jpg') center / cover
	&_support
		background url('../images/slide-bg3.jpg') center / cover
	&_always
		background url('../images/slide-bg4.jpg') center / cover
	&_lawyer
		background url('../images/slide-bg5.jpg') center / cover
	&__circle
		sprite($circle)
		position absolute
		text-align center
		padding: 150px 138px 0
		left 50%
		top 50%
		margin-left -(@width / 2)
		margin-top -(@height / 2)
	&__region,
	&__number
		font-size 28px
		font-weight 400
		margin-top 40px
		color white
	&__region
		float left
		margin-left 20px
	&__number
		float right
		margin-right 37px
	&__logo
		font-family 'Roboto Condensed', sans-serif
		font-weight 400
		font-size 13px
		text-transform uppercase
		letter-spacing 2px
		margin-bottom 10px
	&__heading
		font-size 28px
		font-family 'Roboto Condensed', sans-serif
		letter-spacing 2px
		padding-bottom 20px
		text-transform uppercase
		font-weight 700
		margin-bottom 12px
		position relative
		&:after
			content ''
			position absolute
			background black
			width 82px
			height 9px
			left 50%
			bottom 0
			margin-left -(@width / 2)		
	&__desc
		color #8b694f
		font-family 'Roboto', sans-serif
		font-size 13px
		text-transform uppercase
		font-weight 400
		letter-spacing 2px
		line-height 1.3
		margin-bottom 10px
	&__btn
		background-color #0c0c0c
		width 153px
		height 36px
		line-height 36px
		font-weight 400
		font-size 13px
		display block
		color white
		margin 0 auto
		padding 0 12px
		text-transform uppercase
		text-decoration none
		letter-spacing 1px
		&:hover
			background lighten(#0c0c0c, 20%)
.nav
	width 758px
	height 48px
	margin -78px auto 0
	background url('../images/nav-bg.jpg') no-repeat bottom / 100%
	//background 	background url('../images/header-bg.jpg') 1500px / cover

	position relative
	z-index 1000
	padding-top 30px
	&__item,
	&__link
		display inline-block
	&__item
		margin-left 35px
		&:first-child
			margin-left 42px
	&__link
		font-size 13px
		text-transform uppercase
		letter-spacing 1px
		font-weight 400
		&:hover
			text-decoration underline
		&_active
			border-bottom 7px solid black
			padding-bottom 7px
